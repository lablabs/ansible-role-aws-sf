#! /bin/bash

apt update && apt install ansible python3 python3-pip python3-venv -y
cd {{ aws_sf_init_dir_ansible }}
rm -rf venv
python3 -m venv ./venv
source venv/bin/activate
pip3 install --upgrade pip
pip3 install -r requirements.txt
ansible-galaxy install -r requirements.yml
INVENTORY_PATH=`echo "{{ inventory_dir }}" | sed 's/^.*inventor/inventor/'`
ansible-playbook {{ aws_sf_init_playbook }} -i "$INVENTORY_PATH" --connection local --limit "$(hostname -I | awk '{print $1}')"
